extends layout

block head
    title #{name}

block body
    h1 #{name}
    form(id='search', method='post')
        input(type='search', value=params.search)
        button(type='submit') Search
    table
        tbody
            each row in rows
                tr
                    each value, key in row
                        if references[key]
                            td
                                a(href='/elka/' + references[key] + '?id=' + value) #{value}
                        else
                            td #{value}
